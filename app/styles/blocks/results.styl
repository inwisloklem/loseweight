.results
  position: relative
  padding: 40px 0
  text-align: center
  background-color: $primary-color-dark

  padding-top: 75px
  @media $tablet-desktop
    padding-top: 110px

  &__title
    margin-bottom: 20px
    text-align: center
    color: $primary-color-text
    font(2.5em, 1.2)

  &__block
    display: flex
    flex-direction: column-reverse
    align-items: center
    margin-bottom: 20px
    padding: 20px
    border-radius: 10px
    background-color: $primary-color-text

    @media $tablet
      flex-direction: row-reverse
      justify-content: flex-end

    @media $desktop
      flex-direction: row
    
  &__image
    display: none
    
    @media $desktop
      display: block
  
  &__wrapper
    padding: 10px
    flex-grow: 0

    @media $tablet
      flex-basis: 400px
      margin-left: auto

    @media $desktop
      flex-grow: 1

  &__video
    margin-top: 10px
    background-color: $primary-color
    width: 300px
    height: 170px

    img
      max-width: 100%

    @media $tablet-desktop
      margin-top: 0
      flex-basis: 400px
      width: 400px
      height: 225px

  &__quote
  &__name
  &__desc
    display: block
    text-align: center

  &__quote
    color: $accent-color
    font-family: $font-title
    font(1em, 1.2, 500)

  &__name
    color: $primary-text-color
    font-style: normal
    font(1em, 1.2, 500)

  &__desc
    color: $primary-text-color
    font(0.875em, 1.2, 200)

  &__btn
    display: inline-block

  &::after
    position: absolute
    z-index: 5
    bottom: -35px
    display: block
    border-top: 35px solid $primary-color-dark
    border-right: calc(50vw - 8px) solid transparent
    border-left: calc(50vw - 8px) solid transparent
    content: ""
    
    @media $tablet-desktop
      bottom: -70px
      border-top-width: 70px
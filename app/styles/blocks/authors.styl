.authors
  position: relative
  padding: 40px 0
  text-align: center
  background-color: $primary-color-text

  padding-top: 75px
  @media $tablet-desktop
    padding-top: 110px

  &__title
    margin-bottom: 20px
    text-align: center
    color: $primary-text-color
    font(2.5em, 1.2)

  &__text
    margin-bottom: 40px
    text-align: left

  &__list
    flex-basis: 60%
    list-style-type: none
    text-align: left

  &__item
    margin-bottom: 10px
    padding-left: 40px
    padding-bottom: 10px
    background-image: url("../img/list-point-blue.png")
    background-repeat: no-repeat

  &__wrapper
    margin-bottom: 20px
    display: flex
    flex-direction: column

    @media $tablet-desktop
      flex-direction: row
      align-items: center
      
    &--reverse
      @media $tablet-desktop
        flex-direction: row-reverse

  &__image
    flex-basis: 40%
    margin-right: 20px
    margin-bottom: 20px
    align-self: center

    @media $tablet-desktop
      margin-bottom: 0

    img
      max-width: 100%

  &__divider
    margin-bottom: 40px

  &__btn
    display: inline-block